{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["src/*", "dist/*"],
      "@interfaces/*": ["../interfaces/*"]
    }
  },
  "include": ["src"]
}
