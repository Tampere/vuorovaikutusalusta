{
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["dom", "es6"],
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@src/*": ["src/*"],
      "@interfaces/*": ["../interfaces/*"]
    },
    "baseUrl": "."
  }
}
