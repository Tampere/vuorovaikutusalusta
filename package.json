{
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx}": [
      "npm run lint --prefix client",
      "npm run tsc --prefix client -- --noEmit --strict"
    ],
    "server/**/*.ts": [
      "npm run lint --prefix server",
      "npm run tsc --prefix server -- --noEmit --strict"
    ],
    "*.{js,jsx,ts,tsx,json}": "prettier --write --ignore-unknown"
  }
}
